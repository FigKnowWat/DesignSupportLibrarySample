<resources>

    <style name="Base.Theme.DSLSample" parent="Theme.AppCompat.NoActionBar">

        <item name="colorPrimary">@color/toolbar_background</item>

        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/toolbar_background_dark</item>

        <!--   theme UI controls like checkboxes and text fields e.g. FloatActionButton -->
        <item name="colorAccent">@android:color/white</item>

        <!-- Title Text Color -->
        <item name="android:textColorPrimary">@color/primary_text</item>

        <!-- color of the menu overflow icon (three vertical dots) -->
        <item name="android:textColorSecondary">@color/secondary_text</item>


        <item name="android:windowBackground">@color/layout_background</item>
    </style>

    <!--
       Base application theme, dependent on API level. This theme is replaced
       by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
   -->
    <style name="AppBaseTheme" parent="Base.Theme.DSLSample">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>


    <style name="TextLabel" parent="TextAppearance.AppCompat">
        //hint color And Label Color in False State
        <item name="android:textColorHint">@color/accent</item>
        <item name="android:textSize">20sp</item>
        //Label color in True State And Bar Color False And True State
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlNormal">@color/secondary_text</item>
        <item name="colorControlActivated">@color/accent</item>
    </style>

    <style name="FloatingActionButtonStyle" parent="Widget.Design.FloatingActionButton">
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimary">@color/accent</item>
        <item name="colorPrimaryDark">@color/accent</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>


</resources>
